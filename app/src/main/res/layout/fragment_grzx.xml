<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context="com.jingcai.jc_11x5.ui.fragment.GrzxFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/margin_35"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="#fc8d3b"
                android:paddingTop="@dimen/margin_8"
                android:text="个人中心"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_18"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <ImageView
                    android:id="@+id/iv_top"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:src="@mipmap/ic_grzx_background"/>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/tv_login_mc"
                    android:gravity="center_horizontal"
                    android:layout_marginBottom="@dimen/margin_5"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/tv_nc"
                        android:text="昵称："
                        android:textSize="@dimen/text_size_16"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/tv_nc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="51lucky游1号"
                        android:textSize="@dimen/text_size_16"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/tv_set"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/tv_nc"
                        android:layout_marginLeft="@dimen/margin_5"
                        android:text="【设置】"
                        android:textColor="#fd7f11"
                        android:textSize="@dimen/text_size_16"/>

                    <TextView
                        android:id="@+id/tv_refresh"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/tv_nc"
                        android:text="【刷新】"
                        android:textColor="@color/blue"
                        android:textSize="@dimen/text_size_16"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_login_mc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/iv_top"
                    android:gravity="center_horizontal"
                    android:layout_marginBottom="@dimen/margin_5"
                    android:text=""
                    android:textColor="@color/gray_q"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@color/white"
                android:paddingBottom="@dimen/margin_5"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_version"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/margin_25"
                    android:text=""
                    android:textColor="@color/gray_q"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="开奖提示音："
                    android:textColor="@color/gray_q"/>
                <Switch
                    android:id="@+id/kj_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:switchMinWidth="20dp"
                    android:thumb="@drawable/switch_thumb"
                    android:track="@drawable/selector_switch"
                    android:checked="true"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingTop="@dimen/margin_5"
                android:paddingBottom="@dimen/margin_15"
                android:paddingLeft="@dimen/margin_15"
                android:paddingRight="@dimen/margin_15"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/rl_jifen"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/layout_height_65"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@drawable/bg_layout_h"
                    android:layout_marginRight="@dimen/margin_5"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/margin_8"
                        android:layout_toLeftOf="@+id/tv_jf_mc"
                        android:src="@mipmap/ic_grzx_jifen"
                        android:id="@+id/iv_jf" />

                    <TextView
                        android:id="@+id/tv_jf_mc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="积分(分)"
                        android:textColor="@color/white"/>

                    <TextView
                        android:id="@+id/tv_jifen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_jf_mc"
                        android:text=""
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="@dimen/text_size_20"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_dianbi"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/layout_height_65"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@drawable/bg_layout_hh"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/margin_8"
                        android:layout_toLeftOf="@+id/tv_dianbi_mc"
                        android:src="@mipmap/ic_grzx_dianbi"/>
                    <TextView
                        android:id="@+id/tv_dianbi_mc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="无忧币(个)"
                        android:textColor="@color/white"/>

                    <TextView
                        android:id="@+id/tv_dianbi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_dianbi_mc"
                        android:text=""
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="@dimen/margin_20"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_yue"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/layout_height_65"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@drawable/bg_layout_hh"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/margin_8"
                        android:layout_toLeftOf="@+id/tv_yue_mc"
                        android:src="@mipmap/ic_grzx_dianbi"/>
                    <TextView
                        android:id="@+id/tv_yue_mc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="余额(元)"
                        android:textColor="@color/white"/>

                    <TextView
                        android:id="@+id/tv_yue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_yue_mc"
                        android:text=""
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="@dimen/margin_20"/>

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingTop="@dimen/margin_5"
                android:paddingBottom="@dimen/margin_5"
                android:paddingLeft="@dimen/margin_15"
                android:paddingRight="@dimen/margin_15">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="包时："
                    android:textSize="@dimen/text_size_16"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/vip_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="@dimen/text_size_16"
                    android:textColor="@color/black"/>
            </LinearLayout>

            <com.jingcai.jc_11x5.view.ScrollGridView
                android:id="@+id/gv_channel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:verticalSpacing="1dp"
                android:horizontalSpacing="1dp"
                android:layout_marginTop="@dimen/margin_5"
                android:layout_marginBottom="@dimen/margin_5"
                android:numColumns="3"/>

            <TextView
                android:id="@+id/tv_exit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_height_55"
                android:background="@color/white"
                android:gravity="center"
                android:text="----- 退出登录 -----"
                android:textSize="@dimen/text_size_18"/>

            <Button
                android:id="@+id/btn_ceshi"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/margin_20"
                android:text="数据测试菜单"
                android:visibility="gone"
                style="@style/button_common_style_gray" />

        </LinearLayout>

    </ScrollView>


</LinearLayout>
