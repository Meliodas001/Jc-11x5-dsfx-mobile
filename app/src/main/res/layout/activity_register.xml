<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context="com.jingcai.jc_11x5.ui.activity.RegisterActivity">

    <include
        android:id="@+id/layout_title"
        layout="@layout/page_title_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="@dimen/margin_15"
        android:layout_marginRight="@dimen/margin_15"
        android:orientation="vertical"
        android:layout_below="@+id/layout_title"
        android:layout_centerHorizontal="true">

        <EditText
            android:id="@+id/et_phone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_height_45"
            android:background="@drawable/bt_bg_up"
            android:drawablePadding="@dimen/margin_15"
            android:hint="@string/hint_phone"
            android:drawableLeft="@mipmap/ic_login_user"
            android:ems="10"
            android:inputType="number"
            android:textSize="@dimen/text_size_14"
            android:textColor="@color/gray" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@mipmap/divider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_phone_code"
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_height_45"
                android:drawablePadding="@dimen/margin_15"
                android:hint="@string/hint_yzm"
                android:ems="10"
                android:background="@drawable/bt_bg_mid"
                android:drawableLeft="@mipmap/phone"
                android:textSize="@dimen/text_size_14"
                android:textColor="@color/gray" />

            <Button
                android:id="@+id/et_get_msg"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="-92dp"
                android:background="#fc8d3b"
                android:textColor="@color/white"
                android:text="获取验证码"/>
        </LinearLayout>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@mipmap/divider" />

        <EditText
            android:id="@+id/et_nick_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_height_45"
            android:drawablePadding="@dimen/margin_15"
            android:hint="@string/hint_nc"
            android:ems="10"
            android:background="@drawable/bt_bg_mid"
            android:drawableLeft="@mipmap/phone"
            android:textSize="@dimen/text_size_14"
            android:textColor="@color/gray" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@mipmap/divider" />

        <EditText
            android:id="@+id/et_share_no"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_height_45"
            android:drawablePadding="@dimen/margin_15"
            android:hint="请输入推广号"
            android:ems="10"
            android:inputType="number"
            android:background="@drawable/bt_bg_mid"
            android:drawableLeft="@mipmap/ic_login_user"
            android:textSize="@dimen/text_size_14"
            android:textColor="@color/gray" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@mipmap/divider" />

        <EditText
            android:id="@+id/et_pwd"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_height_45"
            android:drawablePadding="@dimen/margin_15"
            android:hint="@string/hint_pwd"
            android:inputType="textPassword"
            android:ems="10"
            android:background="@drawable/bt_bg_mid"
            android:drawableLeft="@mipmap/ic_login_pwd"
            android:textSize="@dimen/text_size_14"
            android:textColor="@color/gray" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@mipmap/divider" />

        <EditText
            android:id="@+id/et_qr_pwd"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_height_45"
            android:background="@drawable/bt_bg_down"
            android:hint="@string/hint_qrpwd"
            android:inputType="textPassword"
            android:drawablePadding="@dimen/margin_15"
            android:drawableLeft="@mipmap/ic_login_pwd"
            android:textSize="@dimen/text_size_14"
            android:textColor="@color/gray" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_height_45"
            android:gravity="center">

            <CheckBox
                android:id="@+id/cb_agree"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_alignParentLeft="true"
                android:background="@color/alpha"
                android:layout_centerVertical="true"
                android:button="@drawable/checkbox_style"
                android:text="@string/text_tongyitiaokuan"
                android:textColor="@color/gray"/>

            <TextView
                android:id="@+id/tv_fuwu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="@dimen/margin_15"
                android:text="@string/text_fuwutiaokuan"
                android:autoLink="all"
                android:layout_marginBottom="@dimen/margin_2"
                android:textColor="#59aaec"/>

        </RelativeLayout>

        <Button
            android:id="@+id/btn_zhuce"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/margin_10"
            android:text="@string/bt_zhuce"
            style="@style/button_common_style" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_height_45"
            android:layout_marginTop="@dimen/margin_15"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_qq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/margin_8"
                android:src="@mipmap/qq"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_toRightOf="@+id/iv_qq"
                android:text="@string/btn_kefu"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/tv_denglu"
                android:layout_centerInParent="true"
                android:text="@string/register_text"/>

            <TextView
                android:id="@+id/tv_denglu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/register_denglu"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:textColor="#59aaec"/>

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>
