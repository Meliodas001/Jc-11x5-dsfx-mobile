<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_height_45"
        android:paddingLeft="@dimen/margin_10"
        android:paddingRight="@dimen/margin_10">

        <TextView
            android:id="@+id/tv_kjqs"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="" />

        <!--<TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_toLeftOf="@+id/tv_djs"
            android:text="下次开奖剩余："/>-->

        <TextView
            android:id="@+id/tv_djs"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:text="" />

    </RelativeLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_15"
        android:layout_marginBottom="@dimen/margin_15"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_kj1"
            android:layout_width="@dimen/layout_height_45"
            android:layout_height="@dimen/layout_height_45"
            android:background="@mipmap/ic_kaijiang_l"
            android:gravity="center"
            android:text="00"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_20"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_kj2"
            android:layout_width="@dimen/layout_height_45"
            android:layout_height="@dimen/layout_height_45"
            android:layout_marginLeft="@dimen/margin_5"
            android:background="@mipmap/ic_kaijiang_l"
            android:gravity="center"
            android:text="00"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_20"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_kj3"
            android:layout_width="@dimen/layout_height_45"
            android:layout_height="@dimen/layout_height_45"
            android:layout_marginLeft="@dimen/margin_5"
            android:background="@mipmap/ic_kaijiang_l"
            android:gravity="center"
            android:text="00"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_20"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_kj4"
            android:layout_width="@dimen/layout_height_45"
            android:layout_height="@dimen/layout_height_45"
            android:layout_marginLeft="@dimen/margin_5"
            android:background="@mipmap/ic_kaijiang_l"
            android:gravity="center"
            android:text="00"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_20"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_kj5"
            android:layout_width="@dimen/layout_height_45"
            android:layout_height="@dimen/layout_height_45"
            android:layout_marginLeft="@dimen/margin_5"
            android:background="@mipmap/ic_kaijiang_l"
            android:gravity="center"
            android:text="00"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_20"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_10"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/layout_height_35"
                android:background="@drawable/bt_bg_single_left"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:layout_marginRight="@dimen/margin_8"
                    android:src="@mipmap/ic_jifen" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="积分："
                    android:textColor="@color/gray" />

                <TextView
                    android:id="@+id/tv_jifen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/margin_10"
                    android:text="0"
                    android:textColor="@color/gray" />

            </LinearLayout>

            <View
                android:layout_width="1dip"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:background="@color/gray_q" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/layout_height_35"
                android:background="@drawable/bt_bg_single_right"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:layout_marginRight="@dimen/margin_8"
                    android:src="@mipmap/ic_dianbi" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="无忧币："
                    android:textColor="@color/gray" />

                <TextView
                    android:id="@+id/tv_dianbi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/margin_10"
                    android:text="0"
                    android:textColor="@color/gray" />

            </LinearLayout>
        </LinearLayout>

        <!--<LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/layout_height_35"
            android:background="@drawable/bg_lightgray"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_10"
                android:layout_marginRight="@dimen/margin_8"
                android:src="@mipmap/ic_jifen" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="余额："
                android:textColor="@color/gray" />

            <TextView
                android:id="@+id/tv_yue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_10"
                android:text="0"
                android:textColor="@color/gray" />

        </LinearLayout>-->
    </LinearLayout>


</LinearLayout>
