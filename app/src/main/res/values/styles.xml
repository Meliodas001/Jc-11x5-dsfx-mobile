    <style name="RadioButtonStyle">
        <item name="android:layout_width">@dimen/layout_width_115</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@null</item>
        <item name="android:background">@drawable/selector_bt_orange</item>
        <item name="android:textColor">@drawable/textview_selector_checked</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="RadioButtonStyle1">
        <item name="android:layout_width">wrap_content</item>
