    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/black</item><!--状态栏颜色-->
        <item name="colorAccent">@color/black</item><!--控制各个控件被选中时的颜色-->
        <item name="colorControlNormal">@color/black</item><!--各个控制控件的默认颜色-->
        <!-- AppCompatEditText选择的底线颜色 -->
        <!--<item name="colorControlActivated">@color/ydwb_font</item>-->
    </style>

    <style name="textview_common_style">
        <item name="android:layout_marginTop">@dimen/margin_5</item>
        <item name="android:layout_marginBottom">@dimen/margin_5</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:textColor">@color/black</item>
    </style>


    <!--Button按钮公共样式-->
    <style name="button_common_style">
        <item name="android:layout_height">@dimen/btn_height_45</item>
        <item name="android:background">@color/button_color</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="button_common_style_gray">
        <item name="android:layout_height">@dimen/btn_height_45</item>
        <item name="android:background">@color/button_color_gray</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <!--EditText输入框公共样式-->
    <style name="edittext_commom_style">
        <item name="android:layout_height">@dimen/et_height_45</item>
        <item name="android:textCursorDrawable">@drawable/color_cursor</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="edittext_commom_style_bjsz">
        <item name="android:inputType">number</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:paddingLeft">@dimen/margin_5</item>
        <item name="android:paddingTop">@dimen/margin_2</item>
        <item name="android:paddingBottom">@dimen/margin_2</item>
        <item name="android:background">@drawable/bg_layout_grayish</item>
    </style>

